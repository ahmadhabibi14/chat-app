      <div class="h-fit w-[500px] bg-[#0a0a0a] rounded-2xl p-6 flex flex-col gap-9">
        <div class="w-full h-fit flex flex-col gap-3">
          <div class="flex flex-col gap-2">
            <label
              for="fullNameInput"
              class="ml-3 text-base font-medium text-[#ADDEBE]"
            >Name</label>
            <input
              value="{{UserData.FullName}}"
              type="text"
              name="fullNameInput"
              id="fullNameInput"
              placeholder="John Doe"
              class="auth-input-elm"
            />
          </div>
          <div class="flex flex-col gap-2">
            <label
              for="locationInput"
              class="ml-3 text-base font-medium text-[#ADDEBE]"
            >Location</label>
            <input
              value="{{UserData.Location}}"
              type="text"
              name="locationInput"
              id="locationInput"
              placeholder="Lombok, Indonesia"
              class="auth-input-elm"
            />
          </div>
          <div class="flex flex-col gap-2">
            <label
              for="websiteInput"
              class="ml-3 text-base font-medium text-[#ADDEBE]"
            >Website</label>
            <input
              value="{{UserData.Website}}"
              type="text"
              name="websiteInput"
              id="websiteInput"
              placeholder="https://example.com"
              class="auth-input-elm"
            />
          </div>
        </div>
        
