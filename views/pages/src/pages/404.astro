---
const title: string = `{{.Title}}`;
const message: string = `{{.Message}}`;
const status: string = `{{.Status}}`;
const code: string = `{{.Code}}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicons/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body>
  <main>
    <div class="header">
      <h1>{code} - {status}</h1>
      <p>{message}</p>
    </div>
    <a href="/">
      <span>Back to Home</span>
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
        <path stroke="currentColor" d="M14.4301 5.92993L20.5001 11.9999L14.4301 18.0699" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
        <path stroke="currentColor" d="M3.5 12H20.33" stroke-width="2" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </a>
  </main>
</body>
</html>

<style>
  :root {
    --tw-text-opacity: 1;
    --tw-bg-opacity: 1;
  }

  main {
    width: 100%;
    height: 100vh;
    background-color: rgb(250 250 250 / var(--tw-bg-opacity));
    margin: -2.5rem/* -40px */;
    max-height: 100vh;
    color: rgb(39 39 42 / var(--tw-text-opacity));
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem/* 32px */;
    font-family: ui-sans-serif,system-ui,sans-serif,"Apple Color Emoji","Segoe UI Emoji",Segoe UI Symbol,"Noto Color Emoji";
  }

  .header {
    display: flex;
    flex-direction: column;
    gap: 0.75rem/* 12px */;
    justify-content: center;
    align-items: center;
  }

  .header h1 {
    font-size: 3.75rem/* 60px */;
    line-height: 1;
    font-weight: 700;
    margin: 0;
  }

  .header p {
    font-size: 1.5rem/* 24px */;
    line-height: 2rem/* 32px */;
    margin: 0%;
  }

  a {
    position: relative;
    padding-top: 0.5rem/* 8px */;
    padding-bottom: 0.5rem/* 8px */;
    padding-left: 1.5rem/* 24px */;
    padding-right: 4rem/* 64px */;
    background-color: rgb(5 150 105 / var(--tw-bg-opacity));
    border-radius: 9999px;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    font-size: 1rem/* 16px */;
    line-height: 1.5rem/* 24px */;
    font-weight: 700;
    color: #FFF;
    text-decoration: none;
  }

  a:hover {
    background-color: rgb(4 120 87 / var(--tw-bg-opacity));
  }

  a svg {
    width: 1.25rem/* 20px */;
    position: absolute;
    right: 1.25rem/* 20px */;
    transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
    transition-duration: 150ms;
    transition-duration: 150ms;
    top: 0px;
    bottom: 0px;
    height: 100%;
  }

  a:hover svg {
    right: 0.75rem/* 12px */;
  }
</style>