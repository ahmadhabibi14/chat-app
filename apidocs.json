{
  "openapi": "3.0.3",
  "info": {
    "title": "VFtalk RESTful API",
    "description": "API Spec for VFtalk RESTful API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://vftalk.my.id/api"
    }
  ],
  "paths": {
    "/api/login": {
      "post": {
        "tags": ["Auth API"],
        "description": "Login to VFtalk",
        "summary": "Login",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "status": {
                      "type": "string"
                    },
                    "errors": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "$ref": "#/components/schemas/Auth"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Login failed",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "status": {
                      "type": "string"
                    },
                    "errors": {
                      "type": "string"
                    },
                    "data": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/user-lists": {
      "post": {
        "tags": ["Users"],
        "description": "Get list of users",
        "summary": "Get list of users",
        "responses": {
          "200": {
            "description": "Get list of users",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number"
                    },
                    "status": {
                      "type": "string"
                    },
                    "errors": {
                      "type": "string"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "message": {
                          "type": "string"
                        },
                        "users": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "username": {
                                "type": "string"
                              },
                              "full_name": {
                                "type": "string"
                              },
                              "avatar": {
                                "type": "string"
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "Auth": {
        "type": "apiKey",
        "in": "header",
        "name": "Cookie",
        "description": "Authentication for VFtalk API"
      }
    },
    "schemas": {
      "Auth": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          },
          "username": {
            "type": "string"
          }
        }
      }
    }
  }
}